{
  "name": "elm-geometric-transformation",
  "version": "1.0.1",
  "description": "Rotate, Scale, Translate and Shear shapes",
  "keywords": [
    "elm"
  ],
  "author": "bja <code@benansell.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:benansell/elm-geometric-transformation.git"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "lobo": "^0.3.1"
  },
  "devDependencies": {
    "rimraf": "^2.5.4"
  },
  "scripts": {
    "clean": "rimraf node_modules elm-stuff tests/elm-stuff",
    "build": "elm-make --yes",
    "build-doc": "elm-make --docs=documentation.json",
    "test-console": "lobo --framework=elm-test --prompt=no --debug --verbose",
    "test": "npm run test-console --silent",
    "test-ci": "lobo --framework=elm-test --reporter=junit-reporter --reportFile=unit-tests.xml --junitFormat=text --prompt=no --debug --verbose"
  }
}
